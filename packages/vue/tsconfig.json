{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "useDefineForClassFields": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "importHelpers": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "importsNotUsedAsValues": "error",
    "preserveValueImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/node_modules/**"
  ],
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}